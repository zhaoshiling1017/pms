<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>流程启动统计</title>
    #parse('common/path-css.vm')
    <link rel="stylesheet" href="$path/static/css/bootstrap-datetimepicker.css" type="text/css">
    <script src="$path/static/js/jquery.min.js" type="text/javascript"></script>
    <script src="$path/static/js/moment.min.js" type="text/javascript"></script>
    <script src="$path/static/js/bootstrap-datetimepicker.js" type="text/javascript"></script>
    <script src="$path/static/js/datetimepicker.js" type="text/javascript"></script>
    <script src="$path/static/js/main.js" type="text/javascript"></script>
    <script src="$path/static/js/Chart.js" type="text/javascript"></script>
    <script src="$path/static/js/initChart.js" type="text/javascript"></script>
    <script src="$path/static/js/index.js" type="text/javascript"></script>
    <!-- jqgrid -->
    <script src="$path/static/js/jqgrid/grid.locale-cn.js" type="text/javascript"></script>
    <script src="$path/static/js/jqgrid/jquery.jqGrid.min.js" type="text/javascript"></script>
    <script src="$path/static/js/jqgrid/table-jqgrid.js" type="text/javascript"></script>
	<!-- json-serializeObject -->
	<script src="$path/static/js/json/json-serializeObject.js" type="text/javascript"></script>
	<script src="$path/static/js/alert.js" type="application/javascript"></script>
</head>
<body>
    <div class="wrapper">
        <div class="panel">
            <div class="panel-head">
                <h4>统计报表<b class="join">-</b><b class="title-child">流程启动统计</b></h4></h4>
            </div>
            <div class="panel-body">
                <form class="control-condition" id="statForm">
                    <div class="form-inline">
                        <label for="timeon">时间：</label>
                        <div class='input-group datetimepicker date-picker datepiker-year'>
                            <input type='text' id="year" name="startTime"/>
                            <em class="input-group-addon">
                                <i class="icon icon-calendar-alt-stroke"></i>
                            </em>
                        </div>
                    </div>
					 <div class="form-inline">
                        <label for="status">流程名称：</label>
                        <input type="text" name="procName" id="procName"/>
                    </div>
                    <div class="form-inline">
                        <label for="status">运行状态：</label>
                        <select name="status" id="status">
                            <option value="0">未完成</option>
                            <option value="1">已完成</option>
                        </select>
                    </div>
                    <div class="form-inline">
                        <label for="type">流程类型：</label>
                        <select name="procType" id="procType">
                            <option value="0">普通流程</option>
                            <option value="1">临时流程</option>
                        </select>
                    </div>
                    <div class="btn-group">
                        <a href="javascript:void(0);" class="btn-icon">
                            <i class="icon-refresh"></i>
                            <span>刷新</span>
                        </a>
                        <a href="javascript:void(0);" class="btn-icon" onclick="statSearch();getTableData()">
                            <i class="icon-search"></i>
                            <span>查询</span>
                        </a>
                    </div>
                    <div class="clear"></div>
                </form>
                <div class="chart">
                    <ul class="legend">
                        <li>
                            <span class="color-bar maximum"></span>最大值
                        </li>
                        <li>
                            <span class="color-bar primary"></span>普通值
                        </li>
                        <li>
                            <span class="color-bar minimum"></span>最小值
                        </li>
                    </ul>
                </div>
                <div class="chart">
                </div>
				<!--
                <div class="chart">
                </div>
				-->
                <!-- checkbox table -->
                <table  id="statTable" class="table table-bordered"></table>
                <div id="page"></div>
            </div>
        </div>
    </div>
<script>
$(function () {
    statSearch();
	tableInit();
});

function tableInit(){
	$("#statTable").jqGrid({
        url:"$path/statistics/launchTableData",
        datatype:"json", 
        mtype:"post",
        height:'auto',
        autowidth:true,	
		postData: {
			search : JSON.stringify($('#statForm').serializeObject())
		},
        colNames:['流程编号', '流程名称', '流程类型','流程启动时间','流程结束时间',"运行状态","发起人","操作"],
        colModel:[
            {name:'procinstCode', width:'10%'},
            {name:'procName', width:'25%'},
            {name:'procType', width:'5%',formatter:function(cellvalue){
            	return (cellvalue == 0 ? '普通流程' : '临时流程');
            }},
            {name:'startTime', width:'12%'},
            {name:'endTime', width:'12%'},
            {name:'status', width:'5%',formatter:function(cellvalue,options,rowObject){
				if(cellvalue == 0){
					return "未完成["+rowObject.nodeNames+"]";
				}else if(cellvalue == 1){
					return "已完成";
				}else{
					return "已作废";
				}
            }},
            {name:'startPerson.name', width:'5%'},
            {name:'', width:'5%',
            	formatter: function(cellvalue,options,rowObject){ 
        		var href='';
        		href = (rowObject.procType == 0 ? '$path/tasks/taskDetail/4/' : '$path/tempTasks/tempTaskDetail/4/') + options.rowId;
        		var str ='' ;
        		if($shiro.hasPermission("流程启动统计-流程详情")){
        			str = '<a href="'+ href +'" target="myiframe">流程详情</a>'
        		}
    			return str;
        		//return '<a href="'+ href +'">流程详情</a>'; 
        		
        	}},
        ],
        viewrecords: true,//是否在浏览导航栏显示记录总数
        rowNum:10,//每页显示记录数
        pager:$('#page'),
		jsonReader:{
            page: "page",
            total: "pages",
            records: "count",
            root: "results",
            repeatitems: false,
            id: "procinstId"
        },
        gridComplete:function(){
        	resize();
        }
    });
}

function getTableData() { 
	$("#statTable").jqGrid('setGridParam',{
    	postData: { 
			search : JSON.stringify($('#statForm').serializeObject())
		}
	}).trigger('reloadGrid'); 
}

function statSearch(){
	jQuery.ajax({
       type: "post",
       async: true,
       url: "$path/statistics/launchStatiData",
       data: $('#statForm').serialize(),
       dataType: "json",
       error: function (request) {
          initAlert(0,"网络错误");
       },
       success: function (data) {
			initChart(data);
       	}
	});
}	
</script>
</body>
</html>